<p id="notice"><%= notice %></p>
<div class="container">
<h1>Drużyny</h1>

<div class="panel panel-primary">
<div class="panel-heading">Lista drużyn:</div>
<table class="table-striped table-hover">
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Skrót</th>
      <th>Pochodzenie</th>
      <th>Sponsorzy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.skrot %></td>
        <td><%= team.pochodzenie %></td>
        <td><%= team.sponsorzy %></td>
        <td><%= link_to 'Pokaż', team, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edytuj', edit_team_path(team), class:'btn btn-warning' %></td>
        <td><%= link_to 'Usuń', team, class:'btn btn-danger',  method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Dodaj nową drużynę', new_team_path, class:'btn btn-default' %>
</div>
