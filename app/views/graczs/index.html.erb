<p id="notice"><%= notice %></p>
<div class="container">
<h1>Gracze</h1>

<div class="panel panel-primary">
<div class="panel-heading">Lista graczy:</div>
<table class="table-striped table-hover">
  <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Nick</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @graczs.each do |gracz| %>
      <tr>
        <td><%= gracz.imie %></td>
        <td><%= gracz.nazwisko %></td>
        <td><%= gracz.nick %></td>
        <td><%= gracz.team.name %></td>
        <td><%= link_to 'Pokaż', gracz , class:'btn btn-primary' %></td>
        <td><%= link_to 'Edytuj', edit_gracz_path(gracz), class:'btn btn-warning' %></td>
        <td><%= link_to 'Usuń', gracz, class:'btn btn-danger', method: :delete, data: { confirm: 'Jesteś pewien?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Dodaj nowego gracza', new_gracz_path, class:'btn btn-default' %>
</div>
